#version 330

layout(location = 0) out vec4 outColor;

in vec3 p_pos;
in vec4 p_color;
in vec3 p_normal;

uniform vec3 lightPos;

void main() {

	vec3 lightDir = normalize(lightPos - p_pos);

	float d = dot(lightDir, normalize(p_normal));
	outColor = vec4(d,d,d,1) * p_color;
	
//	outColor = vec4(p_normal * 0.5 + 0.5, 1);
}